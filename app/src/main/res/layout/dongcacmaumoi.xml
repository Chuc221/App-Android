<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewGiamGiaMoi"
                    android:background="@android:color/holo_red_dark"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="top|left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/imageviewDienThoaiMoi"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Tên điện thoại"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    android:id="@+id/textViewTenDienThoaiMoi"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/textViewGiaNiemYetMoi"
                    android:textSize="17sp"
                    android:text="10000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/textViewGiaBanMoi"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="17sp"
                    android:text="9000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textViewDaBanMoi"
                    android:layout_gravity="bottom|right"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="18sp"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>